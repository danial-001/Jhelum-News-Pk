<%- include('layout/header') %>
<div class="container">
  <div class="row my-4">
    <div class="col-lg-12">
      <% if (message) { %>
      <div
        class="alert alert-dismissible fade show alert-<%= message.type %>"
        role="alert"
      >
        <strong> <%= message.message %> </strong>
      </div>
      <% } %>
      <div class="d-flex justify-content-start">
        <a href="/logout" class="btn btn-danger mb-3">Logout</a>
      </div>
      <div class="table-responsive">
        <% if (News != "") { %>
        <table class="table table-stripped text-center my-3">
          <thead>
            <tr class="table-dark">
              <th>ID No.</th>
              <th>Image</th>
              <th>News Title</th>
              <th>Description</th>
              <th>Actions</th>
            </tr>
          </thead>
          <tbody>
            <% News.forEach((row, index) => { %>
            <tr class="align-middle">
              <td><%= index %></td>
              <td>
                <img
                  src="<%= row.image %>"
                  width="50"
                  class="img-thumbnail"
                  alt="picture"
                />
              </td>
              <td><%= row.newsHeading %></td>
              <td><%= row.description %></td>
              <td>
                <a href="/edit/<%= row._id %>" class="text-success">
                  <i class="fas fa-edit fa-lg mx-1"></i>
                </a>
                <a href="/delete/<%= row._id %>" class="text-danger">
                  <i class="fas fa-trash fa-lg mx-1"></i>
                </a>
              </td>
            </tr>
            <% }); %>
          </tbody>
        </table>
        <% } else { %>
        <h1 class="text-center text-secondary nt-5">
          No news found in the database
        </h1>
        <% } %>
      </div>
    </div>
  </div>
</div>

<%- include('layout/footer') %>
